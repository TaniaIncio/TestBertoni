<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextTask" parent="@style/TextAppearance.Medium">
        <item name="android:textColor">@color/material_grey_800</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TitleTask" parent="@style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#44000000</item>
        <item name="android:lineSpacingMultiplier">0.7</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">1.5</item>
    </style>


    <style name="AppTheme.ButtonMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/animation_button</item>
    </style>

    <style name="AppTheme.TextTitleDialogGrayOptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_blue_300</item>
        <item name="android:textSize">15sp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <!--?attr/selectableItemBackgroundBorderless-->
    </style>
</resources>
